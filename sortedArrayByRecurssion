const arr = [2,4,5,7,8]


const isSorted = (arr,size) =>{
    
    if(size === 0 || size === 1){
        return true
    }
    if (arr[size - 2] > arr[size - 1]) {
        return false;
    }else{
       return isSorted(arr, size -1)
    }
    
    return arr
}

console.log(isSorted(arr, arr.length))
